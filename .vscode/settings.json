{
  "deno.enable": true,
  "deno.enablePaths": ["./supabase/functions"],
  "deno.disablePaths": [
    "./src",
    "./store",
    "./hooks",
    "./utils",
    "./vite.config.ts"
  ],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode"
}
